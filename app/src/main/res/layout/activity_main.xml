<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/button_acti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity作为监听器"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="153dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"/>

    <Button
        android:id="@+id/button_cryp_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匿名内部类"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="218dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_acti"/>

    <Button
        android:id="@+id/button_bounding_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定到标签"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="279dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_cryp_in"
        android:onClick="newbutton"/>

    <Button
        android:id="@+id/button_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内部类"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="341dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_cryp_in"/>

    <Button
        android:id="@+id/button_outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="外部类"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="405dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_inner"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ButterKnife绑定"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="482dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_outer"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统信息"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="567dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button8"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模拟进度条"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="642dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>